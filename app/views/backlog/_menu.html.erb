<div id="menu_space">
</div>

<div id="menu">

	<a href="#" onClick="collapseMenu('backlog');"><%= image_tag 'menu_collapse.png', :border => 0, :style => "float:left;" -%></a>
	<% action = (@view == :project) ? 'show' : 'team'
	   id = (@view == :project) ? @project.id : @member_team.id
	 %>
	<%= link_to image_tag('menu_taskboard.png', 
			:border => 0, 
			:id => "menu_taskboard_image"), 
		:controller => "taskboard",
		:action => action,
		:id => id
	-%>
	
	<%= link_to_remote image_tag('menu_story_add.png', :id => "menu_story_add_image"), :url => { :controller => :stories, :action => :new, :project => @project, :team => @member_team }, :update => "dummy-for-actions" 
	-%>
	<%= link_to image_tag('menu_admin_section.png', 
			:border => 0, 
			:id => "menu_admin_image",
			:title => "Admin Section"), 
		:controller => (current_member.admins_any_organization?) ? "admin/organizations" : "admin/projects",
		:action => "index"
	-%>

	<%= link_to (image_tag 'menu_logout.png' , 
		:border => 0 ,
		:id => 'taskboard_menu_logout', 
		:title => "Log out"), :controller => 'admin/members', :action => :logout
	-%>
	<% if (@view == :project && (@project.teams.first.projects.size > 1 && !@project.guest_members.include?(@current_member))) || @view == :team-%>
	<div id="menu_views">
		<% team_selected = (@view == :team) %>
		<%= link_to image_tag('admin/admin-div-actions-projects.png'),
			{:action => :show,
			:id => @current_member.last_project_id},
			:class => !team_selected
		-%>
		<%= link_to image_tag('admin/admin-div-actions-teams.png'),
			{:action => :team,
			:id => @member_team.id},
			:class => team_selected
		-%><br />		
	</div>
	<% end %>

</div>

<div id="menu_expand">
	<a href="#" onClick="expandMenu('backlog');" style="position: relative; top: 8px; left: 10px;""><%= image_tag('menu_expand.png', :border => 0)-%></a>
</div>
<script>
	expandMenu('backlog');
</script>
<div id="menu_report_bug">
	<%= link_to "#{image_tag('reportbug/menu_reportbug.png', :alt => 'bug', :title => "Report Bug")}", "/report_bug" -%>
</div>
